<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/caf_header_color"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/distributor_details"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/et_dist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/distributor"
                android:inputType="none|textNoSuggestions"
                android:longClickable="false"
                android:textColorHint="@color/caf_edit_text_hint_color"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_dist_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:ems="10"
                    android:hint="@string/dist_code"
                    android:inputType="textNoSuggestions"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" >
                </EditText>

                <ImageView
                    android:id="@+id/scanImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_barcode_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/et_visit_count"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="@string/visits_no"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" >
                </TextView>

                <TextView
                    android:id="@+id/visit_count_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/caf_header_color"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/caf_details"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/et_total_caf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="@string/total_caf"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" >
                </TextView>

                <EditText
                    android:id="@+id/et_total_caf_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_border"
                    android:ems="10"
                    android:hint="@string/total_caf"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/et_accepted_caf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="@string/accepted_cafs"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" >
                </TextView>

                <EditText
                    android:id="@+id/et_accepted_caf_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_border"
                    android:ems="10"
                    android:hint="@string/accepted_cafs"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/et_rejected_caf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="@string/rejected_cafs"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" >
                </TextView>

                <EditText
                    android:id="@+id/et_rejected_caf_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_border"
                    android:ems="10"
                    android:hint="@string/rejected_cafs"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/et_returned_caf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="@string/returned_cafs"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" >
                </TextView>

                <EditText
                    android:id="@+id/et_returned_caf_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_border"
                    android:ems="10"
                    android:hint="@string/returned_cafs"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/et_mobile_number"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="@string/mobile_number"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" >
                </TextView>

                <EditText
                    android:id="@+id/et_mobile_number_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_border"
                    android:ems="10"
                    android:hint="@string/mobile_number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/et_remarks"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="@string/remarks"
                    android:textColorHint="@color/caf_edit_text_hint_color"
                    android:textSize="14sp" >
                </TextView>

                <Spinner
                    android:id="@+id/remarks_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middleLayout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="bottom" >

            <Button
                android:id="@+id/digitalSignatureButton"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/cameraButton"
                android:background="@drawable/green_button_select_action"
                android:drawableLeft="@drawable/dig_sig"
                android:onClick="onDigitalSignatureButtonClick"
                android:paddingLeft="4dp"
                android:text="@string/signature"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/cameraButton"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_above="@+id/new_caf_submit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/green_button_select_action"
                android:drawableLeft="@drawable/ic_camera_icon"
                android:onClick="onCameraButtonClick"
                android:paddingLeft="10dp"
                android:text="@string/camera"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/new_caf_submit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/digitalSignatureButton"
                android:background="@drawable/blue_button_click_action"
                android:onClick="saveCAF"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_above="@+id/new_caf_submit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/cameraButton"
                android:background="@drawable/image_border"
                android:onClick="onCameraButtonClick"
                android:scaleType="fitXY"
                android:src="@drawable/login_background"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/signaturePreview"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/digitalSignatureButton"
                android:layout_alignLeft="@+id/digitalSignatureButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/image_border"
                android:onClick="onDigitalSignatureButtonClick"
                android:scaleType="fitXY"
                android:src="@drawable/login_background"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>