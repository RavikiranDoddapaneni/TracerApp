<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:background="@drawable/background_image"    android:baselineAligned="true"    android:orientation="horizontal"    android:weightSum="2" >    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_margin="8dp"        android:layout_weight="1"        android:overScrollMode="never"        android:scrollbars="none" >        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@color/white"            android:orientation="vertical" >            <TextView                android:id="@+id/textView1"                android:layout_width="match_parent"                android:layout_height="30dp"                android:background="@color/caf_header_color"                android:gravity="center_vertical"                android:paddingLeft="10dp"                android:text="@string/distributor_details"                android:textColor="@color/white"                android:textSize="16sp"                android:textStyle="italic|bold"                android:typeface="serif" />            <TextView                android:id="@+id/et_dist_name"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:layout_marginTop="10dp"                android:ellipsize="end"                android:singleLine="true"                android:text="Click Image to Scan Distributor Barcode"                android:textColor="@color/actionbar_end_color"                android:textSize="14sp"                android:textStyle="bold"                android:typeface="serif" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:layout_marginTop="15dp"                android:orientation="horizontal" >                <TextView                    android:id="@+id/et_dist_code"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="@string/barcode_hint_text"                    android:textSize="14sp" >                </TextView>                <ImageView                    android:id="@+id/scanImage"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_gravity="right"                    android:src="@drawable/ic_barcode_icon" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:layout_marginTop="15dp"                android:orientation="horizontal" >                <TextView                    android:id="@+id/et_visit_count"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:ems="10"                    android:text="@string/visits_no"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="14sp" >                </TextView>                <TextView                    android:id="@+id/visit_count_value"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:text="5" />            </LinearLayout>            <TextView                android:id="@+id/textView2"                android:layout_width="match_parent"                android:layout_height="30dp"                android:layout_marginTop="10dp"                android:background="@color/caf_header_color"                android:gravity="center_vertical"                android:paddingLeft="10dp"                android:text="@string/caf_details"                android:textColor="@color/white"                android:textSize="16sp"                android:textStyle="italic|bold"                android:typeface="serif" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:layout_marginTop="15dp"                android:orientation="horizontal" >                <TextView                    android:id="@+id/et_total_caf"                    android:layout_width="100dp"                    android:layout_height="wrap_content"                    android:ems="10"                    android:text="@string/total_caf"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="14sp" >                </TextView>                <EditText                    android:id="@+id/et_total_caf_value"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:background="@drawable/button_border"                    android:ems="10"                    android:hint="@string/total_caf"                    android:inputType="number"                    android:maxLength="3"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="12sp" >                </EditText>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:layout_marginTop="15dp"                android:orientation="horizontal" >                <TextView                    android:id="@+id/et_accepted_caf"                    android:layout_width="100dp"                    android:layout_height="wrap_content"                    android:ems="10"                    android:text="@string/accepted_cafs"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="14sp" >                </TextView>                <EditText                    android:id="@+id/et_accepted_caf_value"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:background="@drawable/button_border"                    android:ems="10"                    android:hint="@string/accepted_cafs"                    android:inputType="number"                    android:maxLength="3"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="12sp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:layout_marginTop="15dp"                android:orientation="horizontal" >                <TextView                    android:id="@+id/et_rejected_caf"                    android:layout_width="100dp"                    android:layout_height="wrap_content"                    android:ems="10"                    android:text="@string/rejected_cafs"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="14sp" >                </TextView>                <EditText                    android:id="@+id/et_rejected_caf_value"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:background="@drawable/button_border"                    android:ems="10"                    android:hint="@string/rejected_cafs"                    android:inputType="number"                    android:maxLength="3"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="12sp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:layout_marginTop="15dp"                android:orientation="horizontal" >                <TextView                    android:id="@+id/et_returned_caf"                    android:layout_width="100dp"                    android:layout_height="wrap_content"                    android:ems="10"                    android:text="@string/returned_cafs"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="14sp" >                </TextView>                <EditText                    android:id="@+id/et_returned_caf_value"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="5dp"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:background="@drawable/button_border"                    android:ems="10"                    android:hint="@string/returned_cafs"                    android:inputType="number"                    android:maxLength="3"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="12sp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:layout_marginTop="15dp"                android:orientation="horizontal" >                <TextView                    android:id="@+id/et_mobile_number"                    android:layout_width="100dp"                    android:layout_height="wrap_content"                    android:ems="10"                    android:text="@string/mobile_number"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="14sp" >                </TextView>                <EditText                    android:id="@+id/et_mobile_number_value"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="5dp"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:background="@drawable/button_border"                    android:ems="10"                    android:hint="@string/mobile_number"                    android:inputType="number"                    android:maxLength="10"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="12sp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginBottom="10dp"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:layout_marginTop="15dp"                android:orientation="horizontal" >                <TextView                    android:id="@+id/et_remarks"                    android:layout_width="100dp"                    android:layout_height="wrap_content"                    android:ems="10"                    android:text="@string/remarks"                    android:textColorHint="@color/caf_edit_text_hint_color"                    android:textSize="14sp" >                </TextView>                <Spinner                    android:id="@+id/remarks_spinner"                    android:layout_width="fill_parent"                    android:layout_height="wrap_content"                    android:prompt="@string/select_remark"                    android:spinnerMode="dialog" />            </LinearLayout>        </LinearLayout>    </ScrollView>    <LinearLayout        android:layout_width="350dp"        android:layout_height="match_parent"        android:layout_weight="1"        android:orientation="vertical" >        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_margin="10dp" >            <Button                android:id="@+id/new_caf_submit"                android:layout_width="fill_parent"                android:layout_height="40dp"                android:layout_alignParentBottom="true"                android:layout_centerHorizontal="true"                android:background="@drawable/blue_button_click_action"                android:drawableLeft="@drawable/submit_icon"                android:onClick="saveCAF"                android:paddingLeft="10dp"                android:paddingRight="15dp"                android:text="@string/submit"                android:textColor="@color/white"                android:textSize="15sp" />            <Button                android:id="@+id/cameraButton"                android:layout_width="fill_parent"                android:layout_height="50dp"                android:layout_alignParentLeft="true"                android:layout_alignParentTop="true"                android:background="@drawable/button_select_bg"                android:drawableLeft="@drawable/cam_icon"                android:onClick="onCameraButtonClick"                android:paddingLeft="10dp"                android:text="@string/distributor_photo"                android:textColor="@color/white"                android:textSize="14sp" />            <Button                android:id="@+id/digitalSignatureButton"                android:layout_width="match_parent"                android:layout_height="50dp"                android:layout_alignParentLeft="true"                android:layout_below="@+id/cameraButton"                android:layout_marginTop="15dp"                android:background="@drawable/button_select_bg"                android:drawableLeft="@drawable/digital_signature_icon"                android:onClick="onDigitalSignatureButtonClick"                android:paddingLeft="12dp"                android:paddingRight="5dp"                android:text="@string/signature"                android:textColor="@color/white"                android:textSize="14sp" />            <Button                android:id="@+id/runnerPhotoButton"                android:layout_width="match_parent"                android:layout_height="50dp"                android:layout_alignParentLeft="true"                android:layout_below="@+id/digitalSignatureButton"                android:layout_marginTop="15dp"                android:background="@drawable/button_select_bg"                android:drawableLeft="@drawable/cam_icon"                android:onClick="runnerPhotoButtonClick"                android:paddingLeft="10dp"                android:paddingRight="15dp"                android:text="@string/runner_photo"                android:textColor="@color/white"                android:textSize="14sp" />            <ImageView                android:id="@+id/imagePreview"                android:layout_width="fill_parent"                android:layout_height="50dp"                android:layout_alignParentLeft="true"                android:layout_alignParentRight="true"                android:layout_alignParentTop="true"                android:scaleType="fitXY"                android:visibility="invisible" />            <ImageView                android:id="@+id/signaturePreview"                android:layout_width="fill_parent"                android:layout_height="50dp"                android:layout_above="@+id/runnerPhotoButton"                android:layout_alignParentLeft="true"                android:layout_alignParentRight="true"                android:scaleType="fitXY"                android:visibility="invisible" />            <ImageView                android:id="@+id/runnerImagePreview"                android:layout_width="fill_parent"                android:layout_height="50dp"                android:layout_alignBottom="@+id/runnerPhotoButton"                android:layout_alignParentLeft="true"                android:layout_alignParentRight="true"                android:scaleType="fitXY"                android:visibility="invisible" />        </RelativeLayout>    </LinearLayout></LinearLayout>