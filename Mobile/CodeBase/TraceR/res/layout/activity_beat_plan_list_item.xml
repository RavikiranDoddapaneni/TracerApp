<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/list_item_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_beat_plan_distributor_name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="sampleasdddddddddasffasfafsa"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/collect_CAFS"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/black_button_click_action"
        android:text="@string/collect_cafs"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/item_beat_plan_distributor_visits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/collect_CAFS"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/collect_CAFS"
        android:gravity="center_vertical|center"
        android:text="2"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_beat_plan_distributor_codes"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_beat_plan_distributor_visits"
        android:layout_alignBottom="@+id/item_beat_plan_distributor_visits"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/item_beat_plan_distributor_name"
        android:text="11.45 Am"
        android:textColor="@color/white" />

</RelativeLayout>