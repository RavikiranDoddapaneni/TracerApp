<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout_tl"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@drawable/list_item_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_runner_name"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="@string/button_google_shopper"
        android:textColor="@color/list_view_item_text_color" />

    <TextView
        android:id="@+id/item_runner_total_cafs"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_runner_status"
        android:layout_alignBottom="@+id/item_runner_status"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/item_runner_status"
        android:text="32"
        android:textColor="@color/list_view_item_text_color" />

    <TextView
        android:id="@+id/item_runner_status"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_runner_name"
        android:layout_alignBottom="@+id/item_runner_name"
        android:layout_toRightOf="@+id/item_runner_name"
        android:gravity="center_vertical|center"
        android:text="@string/button_google_shopper"
        android:textColor="@color/list_view_item_text_color" />

    <ImageView
        android:id="@+id/callRunner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/item_runner_total_cafs"
        android:src="@drawable/ic_phonecall" />

    <ImageView
        android:id="@+id/messageRunner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/callRunner"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/callRunner"
        android:src="@drawable/ic_messages" />

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/callRunner"
        android:background="@color/white" />

</RelativeLayout>